<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/fragment_background"
    android:orientation="vertical"
    android:padding="@dimen/activity_margin"
    tools:context=".ui.helpdesk.conversations.NewPostFragment">

    <TextView
        android:id="@+id/tv_change_password_dialog_title"
        android:layout_width="wrap_content"
        android:layout_height="40dp"
        android:layout_gravity="center"
        android:gravity="center"
        android:text="@string/title_dialog_new_conversation"
        android:textAppearance="@style/TextAppearance.MaterialComponents.Headline6"
        android:textColor="@color/dialog_title_87"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_new_conversation_title"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="24dp"
        android:hint="@string/prompt_title"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ti_et_new_conversation_title"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:selectAllOnFocus="true"
            android:textSize="16sp"
            tools:text="Mr. Vevekanand S." />

    </com.google.android.material.textfield.TextInputLayout>

    <com.google.android.material.textfield.TextInputLayout
        android:id="@+id/til_new_conversation_desc"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="3dp"
        android:hint="@string/prompt_description"
        app:errorEnabled="true"
        app:layout_constraintStart_toStartOf="parent">

        <com.google.android.material.textfield.TextInputEditText
            android:id="@+id/ti_et_new_conversation_desc"
            android:layout_width="match_parent"
            android:layout_height="120dp"
            android:maxLines="5"
            android:selectAllOnFocus="true"
            android:textSize="16sp"
            tools:text="Mr. Vevekanand S." />

    </com.google.android.material.textfield.TextInputLayout>

    <Button
        android:id="@+id/btn_new_conversation_post"
        android:layout_width="match_parent"
        android:layout_height="@dimen/button_height"
        android:layout_marginTop="16dp"
        android:enabled="false"
        android:text="@string/action_conversation_post" />

</LinearLayout>