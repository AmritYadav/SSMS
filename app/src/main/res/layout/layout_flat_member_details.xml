<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@drawable/background_payment_details_container"
    android:padding="8dp">

    <androidx.constraintlayout.widget.Guideline
        android:id="@+id/guideline_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical"
        app:layout_constraintGuide_percent="0.55" />

    <androidx.constraintlayout.widget.Group
        android:id="@+id/grp"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:constraint_referenced_ids="member_relation_label, view_relation, associate_member_label, view_associate, tv_flat_member_relation_val, tv_flat_member_associate_val" />

    <TextView
        android:id="@+id/member_relation_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_relation"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_relation_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_relation_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_aadhaar"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_aadhaar_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_aadhaar_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_pan"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_pan_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_pan_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_voter"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_voter_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_voter_val" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_email"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_email_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_email_val" />

    <TextView
        android:id="@+id/associate_member_label"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_associate"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_associate_val"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_associate_val" />

    <TextView
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:text="@string/flat_member_photo_approval"
        android:textColor="@color/input_outbox_stroke"
        android:textStyle="bold"
        app:layout_constraintBottom_toBottomOf="@+id/tv_flat_member_photo_approval_val"
        app:layout_constraintEnd_toStartOf="@+id/guideline_horizontal"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/tv_flat_member_photo_approval_val" />

    <TextView
        android:id="@+id/tv_flat_member_relation_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/view_relation"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_background_dark_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_flat_member_relation_val" />

    <TextView
        android:id="@+id/tv_flat_member_aadhaar_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_relation" />

    <View
        android:id="@+id/view_aadhaar"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_background_dark_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_flat_member_aadhaar_val" />

    <TextView
        android:id="@+id/tv_flat_member_pan_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_aadhaar" />

    <View
        android:id="@+id/view_pan"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_background_dark_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_flat_member_pan_val" />

    <TextView
        android:id="@+id/tv_flat_member_voter_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_pan" />

    <View
        android:id="@+id/view_voter"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_background_dark_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_flat_member_voter_val" />

    <TextView
        android:id="@+id/tv_flat_member_email_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_voter" />

    <View
        android:id="@+id/view_email"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_background_dark_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_flat_member_email_val" />

    <TextView
        android:id="@+id/tv_flat_member_associate_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_email" />

    <View
        android:id="@+id/view_associate"
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_marginTop="5dp"
        android:background="@color/tab_background_dark_300"
        app:layout_constraintTop_toBottomOf="@+id/tv_flat_member_associate_val" />

    <TextView
        android:id="@+id/tv_flat_member_photo_approval_val"
        android:layout_width="0dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="5dp"
        android:fontFamily="sans-serif-light"
        android:textColor="@android:color/black"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toEndOf="@+id/guideline_horizontal"
        app:layout_constraintTop_toBottomOf="@+id/view_associate" />
</androidx.constraintlayout.widget.ConstraintLayout>